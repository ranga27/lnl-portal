{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": ".",
    "predeploy": ["npm install", "npm run build"],
    "runtime": "nodejs16",
    "ignore": [
      "**/.firebase/**",
      "**/.next/cache/**",
      "**/cypress/**",
      "**/firebase/**",
      "**/functions/**",
      "**/node_modules/**",
      "**/src/components/**",
      "**/src/pages/**",
      "**/src/styles/**",
      "**/src/utils/**",
      "**/test-data/**",
      "**/.env.*",
      "**/.eslintrc",
      "**/.eslintrc.*",
      ".firebaserc",
      ".git",
      ".gitignore",
      "**/cypress.*",
      "**/*.log",
      "**/firebase.json",
      "**/firestore.*",
      "**/package-lock.*",
      "**/postcss.*",
      "**/README.*",
      "**/storage.*",
      "**/tailwind.*"
    ]
  },
  "hosting": {
    "target": "lnl-portal",
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    }
  }
}
