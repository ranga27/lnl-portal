{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "backend",
      "predeploy": [
        "npm --prefix functions install",
        "npm --prefix functions run lint"
      ],
      "runtime": "nodejs16",
      "ignore": [
        "**/node_modules/**",
        "**/.env.*",
        "**/.eslintignore",
        "**/.eslintrc.*",
        ".firebaserc",
        ".git",
        ".gitignore",
        "**/*.log",
        "**/firebase.json",
        "**/package-lock.*",
        "**/README.*",
        "**/yarn.*"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsfunc",
        "region": "europe-west2"
      }
    ]
  },
  "extensions": {},
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    }
  }
}
